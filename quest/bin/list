#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"/..
HOME=$($DIR/bin/config home)

if [ ! -f $HOME/1 ]; then
  echo "No quest"
  exit
fi

for quest in $(grep -l 'status: open' $HOME/[0-9]*); do
  number=$(cat $quest | head -n 4 | yq r - quest)
  title=$(cat $quest | head -n 4 | yq r - title)

  echo "#$number $title"
done
